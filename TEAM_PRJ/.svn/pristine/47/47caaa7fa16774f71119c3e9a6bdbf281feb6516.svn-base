				findId.append("(" + member.get("EMP_NO") + ")"); // 직원 번호 추가
			}
			
//			certifiedEmail(email, "[테스트] 요청하신 메일주소로 조회한 아이디입니다.", "해당 메일주소로 가입된 아이디는 [ " + findId + " ] 입니다."); // 아이디를 메일로 보내기
			
			return "ok";
		} else { // 없을 시
			return "fail";
		}
	}
	
	@PostMapping("/sendPwFromEmail")
